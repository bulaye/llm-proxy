{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask App",
            "type": "debugpy",
            "request": "launch",
            "python": "/Users/zhoutao/miniconda3/envs/gemini-test1/bin/python",
            "program": "${workspaceFolder}/app_vertex.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_ENV": "development",
