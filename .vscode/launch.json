            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Start.py",
            "type": "python",
            "request": "launch",
            "python": "/Users/zhoutao/miniconda3/envs/gemini-test1/bin/python",
            "program": "${workspaceFolder}/start.py",
            "console": "integratedTerminal",
            "args": [
                "development"
            ],
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "python": "/Users/zhoutao/miniconda3/envs/gemini-test1/bin/python",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Debug Flask with Breakpoints",
            "type": "python",
            "request": "launch",
            "python": "/Users/zhoutao/miniconda3/envs/gemini-test1/bin/python",
            "module": "flask",
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=8080",
                "--debug"
            ],
            "env": {
                "FLASK_APP": "app_vertex.py",
                "FLASK_ENV": "development"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        }
    ]
